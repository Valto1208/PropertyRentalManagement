@model PropertyRentalManagement.Models.Appointment

@{
    ViewData["Title"] = "Create";
}

<h1>@ViewData["message"]</h1>

<h4>Schedule Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TenantId" class="control-label">Who are you scheduling an appointment with?</label>
                <select asp-for="TenantId" class ="form-control" asp-items="ViewBag.TenantId"></select>
            </div>
            <div class="form-group">
                <label asp-for="AppDateTime" class="control-label"></label>
                <input asp-for="AppDateTime" class="form-control" />
                <span asp-validation-for="AppDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
